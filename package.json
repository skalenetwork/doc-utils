{
  "name": "@skalenetwork/doc-utils",
  "version": "0.1.0",
  "description": "SKALE Network Utilies for Multi-Repo Documentation",
  "bin": {
    "skl-reload": "./lib/cjs/scripts/reload.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "dev": "nodemon --watch \"./src/**/*.*\" --exec npm run build",
    "prepack": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "npx eslint src tests",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src tests --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skalenetwork/doc-utils.git"
  },
  "keywords": [
    "NPM",
    "Package",
    "Template"
  ],
  "author": "Sawyer Cutler",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/skalenetwork/doc-utils/issues"
  },
  "homepage": "https://github.com/skalenetwork/doc-utils#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/live-server": "^1.2.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "live-server": "https://github.com/TheGreatAxios/live-server#update-npm-dependencies",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "simple-live-server": "^0.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ],
  "release": {
    "branches": [
      "main",
      "development"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@antora/cli": "^3.1.3",
    "@antora/site-generator-default": "^3.1.3",
    "@djencks/asciidoctor-mathjax": "^0.0.8",
    "asciidoctor-kroki": "^0.15.4",
    "chalk": "^4.1.2"
  },
  "overrides": {
    "vinyl-fs": {
      "glob-stream": "~7.0"
    }
  }
}
